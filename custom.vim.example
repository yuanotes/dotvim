" keys
set wildignore+=*.pyc,.git


" VirtualENV for python-mode
"let $VIRTUAL_ENV="path/to/virtualenv"

" colorscheme
if has('gui_running') || $TERM=='xterm-256color'
     colorscheme zenburn
endif


" tagbar ctags path
"let g:tagbar_ctags_bin = '/usr/local/bin/ctags'


" guifont
"set guifont=Monaco:h14 "Mac
"set guifont=DejaVu\ Sans\ Mono\ 14 "Linux


" python mode settings
"let g:pymode_lint_checker='pyflakes'
let g:pymode_run_key="<C-c><C-r>"
let g:pymode_breakpoint_key="<C-c><C-b>"
"let g:pymode_rope_guess_project=0
"let g:pymode_lint_checker="pylint"
"let g:pymode_lint = 0
let g:pymode_folding = 0
let g:jsmode_lint = 0
let g:jsmode_folding = 0
let g:jsmode_lint_config = "~/.jslint.rc"
let g:syntastic_javascript_jslint_conf="--browser --regexp --es5 --nomen --evil --eqeq --plusplus --continue --forin --bitwise --predef define  --predef require"
let g:syntastic_error_symbol='✗'
let g:syntastic_warning_symbol='⚠'
let g:jsbeautify = {"jslint_happy":"true"}

" omnicomplete
set completeopt="menuone"   " add preview if you want to view docstring of
                            " python functions.
autocmd FileType html setlocal filetype=htmldjango sts=2 ts=2 sw=2
autocmd BufNewFile,BufRead *.less setlocal filetype=less
" vim:ft=vim
